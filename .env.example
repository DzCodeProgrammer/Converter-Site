# Backend
PORT=4000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000

# Storage (S3 or MinIO); for quick dev you can use local filesystem mode (see README)
STORAGE_MODE=local   # "s3" or "local"
STORAGE_LOCAL_PATH=uploads

# File upload limits
MAX_FILE_SIZE_BYTES=104857600

# Redis (optional). If not set, the app falls back to an in-process queue for dev.
REDIS_HOST=
REDIS_PORT=6379

# JWT
JWT_SECRET=replace_with_a_long_random_secret
JWT_EXPIRES_IN=7d

# Conversion tools (Windows paths - adjust based on your installation)
FFMPEG_PATH=ffmpeg
IMAGEMAGICK_CONVERT=magick
LIBREOFFICE_PATH=soffice

# Prisma (SQLite by default for no-docker dev)
DATABASE_URL=file:./dev.db
